import type { Metadata } from "next";

import {
    // ClerkProvider component provides our pages and components with a user if the latter is authenticated
    ClerkProvider,

    // SignedIn component will only display its contents if a user is authenticated
    SignedIn,

    // SignedOut component will only display its contents if no user is authenticated
    SignedOut,

    // UserButton lets you either manage your user account or sign out
    UserButton,
} from '@clerk/nextjs';

// This is how we globally import Bootstrap CSS
import 'bootstrap/dist/css/bootstrap.min.css';

// We import Next Link component like this 
import Link from "next/link";

export const metadata: Metadata = {
    title: 'Clerk Next.js Quickstart',
    description: 'Generated by create next app',
}

export default function RootLayout({
    children,
}: Readonly<{
    children: React.ReactNode
}>) {
    return (
        <ClerkProvider>
            <html lang="en">
                <body>
                    <header>
                        <SignedOut>
                            {/* Next Link to navigate to sign in page is displayed only if no user is authenticated */}
                            <Link href="/sign-in" className="btn btn-outline-primary">Sign in</Link>
                        </SignedOut>
                        <SignedIn>
                            <UserButton />
                        </SignedIn>
                    </header>
                    {children}
                </body>
            </html>
        </ClerkProvider>
    );
}